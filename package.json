{
	"name": "selfhostablechat",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"main": "electron/main.js",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"setup": "bun scripts/setup-env.ts",
		"electron:dev": "NODE_ENV=development electron electron/main.js",
		"electron:build": "NODE_OPTIONS=\"--max-old-space-size=8192\" bun run build && electron-builder",
		"electron:build:linux": "NODE_OPTIONS=\"--max-old-space-size=8192\" bun run build && electron-builder --linux",
		"electron:build:win": "NODE_OPTIONS=\"--max-old-space-size=8192\" bun run build && electron-builder --win",
		"electron:build:mac": "NODE_OPTIONS=\"--max-old-space-size=8192\" bun run build && electron-builder --mac",
		"desktop": "bun run electron:dev",
		"desktop:build": "bun run electron:build",
		"capacitor:build": "node scripts/build-capacitor.js",
		"capacitor:open": "bunx cap open android",
		"capacitor:sync": "bunx cap sync android",
		"mobile": "bun run capacitor:build",
		"mobile:open": "bun run capacitor:open"
	},
	"devDependencies": {
		"@capacitor/android": "^8.0.2",
		"@capacitor/cli": "^8.0.2",
		"@capacitor/core": "^8.0.2",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-node": "^5.2.12",
		"@sveltejs/enhanced-img": "^0.10.0",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@tailwindcss/forms": "^0.5.11",
		"@tailwindcss/postcss": "^4.1.18",
		"@tailwindcss/typography": "^0.5.19",
		"@types/dompurify": "^3.0.5",
		"autoprefixer": "^10.4.23",
		"electron": "^34.0.0",
		"electron-builder": "^25.1.8",
		"postcss": "^8.5.6",
		"svelte-check": "^4.3.5",
		"tailwindcss": "^4.1.18",
		"tar": "^7.5.7",
		"typescript": "^5.9.3",
		"vite": "^7.3.1"
	},
	"dependencies": {
		"@icons-pack/svelte-simple-icons": "^6.5.0",
		"@kilocode/cli": "^0.26.1",
		"@selemondev/svgl-svelte": "^2.1.1",
		"@sveltejs/kit": "^2.50.1",
		"@tanstack/svelte-query": "^6.0.18",
		"bits-ui": "^2.15.5",
		"chart.js": "^4.5.1",
		"date-fns": "^4.1.0",
		"dompurify": "^3.3.1",
		"eventsource-parser": "^3.0.6",
		"highlight.js": "^11.11.1",
		"layerchart": "^1.0.13",
		"lucide-svelte": "^0.563.0",
		"marked": "^17.0.1",
		"mermaid": "^11.12.2",
		"neverthrow": "^8.2.0",
		"runed": "^0.37.1",
		"svelte": "^5.48.2",
		"sveltekit-superforms": "^2.29.1",
		"zod": "^4.3.6"
	}
}