{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Self-Hostable Chat",
  "version": "0.0.1",
  "identifier": "com.selfhostablechat.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Self-Hostable Chat",
        "width": 1400,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "resizable": true,
        "fullscreen": false,
        "visible": true,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false,
        "contentProtected": false,
        "skipTaskbar": false,
        "titleBarStyle": "Visible"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.webp",
      "icons/128x128.webp",
      "icons/128x128@2x.webp",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {}
}
